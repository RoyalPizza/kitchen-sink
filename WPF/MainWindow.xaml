<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFExample"
        x:Class="WPFExample.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" Unloaded="Window_Unloaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="Open" />
                <MenuItem Header="Save" />
                <MenuItem Header="Exit" />
            </MenuItem>
            <MenuItem Header="Tools">
                <MenuItem Header="1" />
                <MenuItem Header="2" />
                <MenuItem Header="3" />
            </MenuItem>
        </Menu>
        <TabControl Grid.Row="1">
            <TabItem Header="Basic Controls">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <Label Name="ExampleButton_Label" Content="Clicked 0" Margin="5"/>
                        <Button Name="ExampleButton" Content="Click Me" Click="ExampleButton_Click" Margin="5"/>
                        <CheckBox Content="Some Checkbox" Margin="5"/>
                        <TextBox Text="Enter text here" Margin="5"/>
                        <Label Name="PasswordLabel" Content="Secret: "/>
                        <PasswordBox Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged"/>
                        <Slider Name="ExampleSlider" ValueChanged="ExampleSlider_ValueChanged" Minimum="8" Maximum="56"/>
                        <ComboBox Name="ExampleComboBox" />
                        <local:ExampleUserControl />
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <Button Name="AsyncControlButton" Click="AsyncControlButton_Click" Content="Start"/>
                        <ProgressBar Name="AsyncProgressBar" Minimum="0" Maximum="100" Height="20" Margin="5" />
                        <Rectangle Name="AsyncRectagle" Width="50" Height="50" Fill="DarkBlue" />
                        <Ellipse Name="AsyncEllipse" Width="50" Height="50" Fill="DarkOrange" />
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Canvas">
                <Canvas Name="ExampleCanvas" Margin="5"/>
            </TabItem>
            <TabItem Header="Lists">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ListView Name="ExampleListView" Grid.Column="0">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn DisplayMemberBinding="{Binding Path=SepalLength}">
                                    <GridViewColumnHeader Content="Sepal Length" />
                                </GridViewColumn>
                                <GridViewColumn DisplayMemberBinding="{Binding Path=SepalWidth}">
                                    <GridViewColumnHeader Content="Sepal Width" />
                                </GridViewColumn>
                                <GridViewColumn DisplayMemberBinding="{Binding Path=PetalLength}">
                                    <GridViewColumnHeader Content="Petal Length" />
                                </GridViewColumn>
                                <GridViewColumn DisplayMemberBinding="{Binding Path=PetalWidth}">
                                    <GridViewColumnHeader Content="PetalWidth" />
                                </GridViewColumn>
                                <GridViewColumn DisplayMemberBinding="{Binding Path=Variety}">
                                    <GridViewColumnHeader Content="Variety" />
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Calender">
                <Calendar />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
